# Production Environment Variables
NODE_ENV="production"

# API Configuration
API_PORT=3333

# Admin Panel Configuration
BULL_BOARD_PORT=4000
BULL_BOARD_URL=http://localhost:4000
ADMIN_TOKEN="your-secure-admin-token-here"

# Database Configuration (will be overridden by docker-compose)
DB_HOST="timescaledb"
DB_PORT=5432
DB_USER="best_lap"
DB_PASSWORD="best_lap"
DB_NAME="best_lap_db"

# Redis Configuration (will be overridden by docker-compose)
REDIS_PORT=6379
REDIS_HOST="redis"

# External API Keys
GOOGLE_API_KEY="your-google-api-key-here"

# Metrics Collection Configuration
COLLECT_METRICS_CRON_EXPRESSION='0 8,14,20 * * *'
WORKER_CONCURRENCY=10
SEED_THEMES_URL="https://lucsmac.github.io/autodromo-domains/full_data.json"

# Production specific configurations
LOG_LEVEL="info"
REQUEST_LOG_ENABLED=true
CORS_ORIGIN="*"

# Security
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true

# Web Dashboard Configuration
# IMPORTANT: Replace with your actual EC2 public IP or domain
# Example: VITE_API_URL=http://ec2-XX-XXX-XXX-XXX.compute.amazonaws.com:3333
# or: VITE_API_URL=http://your-domain.com:3333
VITE_API_URL=http://localhost:3333